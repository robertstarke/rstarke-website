---
import Layout from "../layout/base.astro";
import RepositoryList from "../components/RepositoryList.astro";
import ProjectList from "../components/ProjectList.astro";
---

<Layout title="Homepage">
  <header>
    <h1 class="text-4xl font-light text-neutral-100">Robert Starke</h1>
    <div class="mt-4 flex flex-row gap-6 flex-wrap">
      <a
        href="/docs/resume-robert-starke.pdf"
        target="_blank"
        title="Resume - Robert Starke (PDF)"
        class="flex flex-row justify-between items-center gap-3 px-4 py-2 flex-nowrap bg-neutral-900 ring-2 ring-offset-neutral-900 ring-neutral-400 text-neutral-200 rounded-lg transition-all duration-200 hover:ring-offset-2 hover:scale-105 hover:ring-green-700"
      >
        <svg
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#e5e5e5"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"
          ></path><path d="M14 2v4a2 2 0 0 0 2 2h4"></path><path d="M10 9H8"
          ></path><path d="M16 13H8"></path><path d="M16 17H8"></path></svg
        >
        <span>Resume (PDF)</span>
      </a>
      <a
        href="mailto:mail@rstarke.de"
        target="_blank"
        title="E-mail address"
        class="flex flex-row justify-between items-center gap-3 flex-nowrap px-4 py-2 bg-neutral-900 ring-2 ring-offset-neutral-900 ring-neutral-400 text-neutral-200 rounded-lg transition-all duration-200 hover:ring-offset-2 hover:scale-105 hover:ring-green-700"
      >
        <svg
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#e5e5e5"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
            d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
        >
        <span>mail@rstarke.com</span>
      </a>
      <a
        href="https://github.com/robertstarke"
        target="_blank"
        title="Github profile"
        class="flex flex-row justify-between items-center gap-3 px-4 py-2 flex-nowrap bg-neutral-900 ring-2 ring-offset-neutral-900 ring-neutral-400 text-neutral-200 rounded-lg transition-all duration-200 hover:ring-offset-2 hover:scale-105 hover:ring-green-700"
      >
        <svg
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#e5e5e5"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
        >
        <span>https://github.com/robertstarke</span>
      </a>
      <a
        href="https://www.linkedin.com/in/rstarke/"
        target="_blank"
        title="LinkedIn Profile"
        class="flex flex-row justify-between items-center gap-3 px-4 py-2 flex-nowrap bg-neutral-900 ring-2 ring-offset-neutral-900 ring-neutral-400 text-neutral-200 rounded-lg transition-all duration-200 hover:ring-offset-2 hover:scale-105 hover:ring-green-700"
      >
        <svg
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#e5e5e5"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path
            d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
          ></path><rect width="4" height="12" x="2" y="9"></rect><circle
            cx="4"
            cy="4"
            r="2"></circle></svg
        >
        <span>https://www.linkedin.com/in/rstarke</span>
      </a>
    </div>
  </header>

  <section>
    <h2 class="mt-8 text-3xl font-light text-neutral-100">About</h2>
  </section>
  <section class="mt-8">
    <h2 class="mb-6 text-3xl font-light text-neutral-100">Showcase</h2>
    <ProjectList />
  </section>
  <section class="mt-8">
    <h2 class="mb-6 text-3xl font-light text-neutral-100">
      Github Repositories
    </h2>
    <RepositoryList />
  </section>
</Layout>
