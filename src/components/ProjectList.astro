---
import ProjectCard from "./ProjectCard.astro";

interface Project {
  id: String;
  name: String;
  url: String;
  frameworks: String[];
  cover: String;
}

const projects = [
  {
    id: "gameoflife",
    name: "John Conway's Game Of Life",
    url: "/gameoflife/index.html",
    frameworks: ["VanillaJS", "VanillaCSS", "HTML5"],
    cover: "gameoflife",
  },
  {
    id: "gameoflife-elm",
    name: "John Conway's Game Of Life implemented with ELM",
    url: "/gameoflife-elm/index.html",
    frameworks: ["ElmJS", "VanillaCSS", "HTML5"],
    cover: "gameoflife-elm",
  },
  {
    id: "nvimcheatsheet",
    name: "Cheatsheet for NeoVim with LazyVim",
    url: "/nvimcheatsheet/index.html",
    frameworks: ["NakedJSX", "VanillaCSS"],
    cover: "nvimcheatsheet",
  },
  {
    id: "workout-svelte",
    name: "Workout App implemented in Svelte",
    url: "/workout/index.html",
    frameworks: ["Svelte", "TailwindCSS"],
    cover: "workout",
  },
  {
    id: "movie-db",
    name: "Movie explorer implemented in AstroJS",
    url: "/movie-db/index.html",
    frameworks: ["AstroJs", "AlpineJs", "FuseJs", "TailwindCSS"],
    cover: "movie-db",
  },
];
---

<ul
  class="mb-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5 gap-8"
>
  {
    projects.map((project: Project, index: number) => (
      <ProjectCard project={project} key={index} />
    ))
  }
</ul>
